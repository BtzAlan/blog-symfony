{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}

	<main class="container ">
		<div class="row">
			<div class="col-md-8">
				<div class="title border-bottom">
					<h1 class="mt-5">Dernières recettes publiées</h1>
					<div id='article-list'>
						{% include 'article/list.html.twig' with {articles} %}
					</div>
				</div>
				<div class="d-flex flex-wrap mt-3">
					{% for recipe in recipes %}
						<div class="p-4">
							<div class="card text-white bg-primary mb-3 mr-3" style="max-width: 20rem;">
								<div class="card-header">Recette n°{{recipe.id}}</div>
								<svg class="d-flex" width="100%" height="200" role="img" viewbox="0 0 318 180">
									<image href="{{recipe.imageFile}}" width="100%" height="100%"></image>
							</svg>
							<div class="card-body">
								<h4 class="card-title">
									<a class="text-light" href="{{path('recipe.show', {id: recipe.id})}}">{{recipe.name}}</a>
								</h4>
								<p class="card-text">{{recipe.description|slice(0,110)~'...'}}</p>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>

		<div class="col-md-4 mt-3" style="top: 2rem;">
			{% include 'widget/about.html.twig' %}
			{% include 'widget/categories.html.twig' %}
		</div>
	</div>
</main>{% endblock %}
