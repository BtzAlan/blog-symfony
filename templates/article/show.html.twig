{% extends 'base.html.twig' %}

{% block title %}
	{{article.title}}
{% endblock %}

{% block body %}
	<div class="container">
		<h1>{{article.title}}</h1>

		<hr>

		{{article.content}}
		<h2 class="comment-title mt-5">
			<span id="comment-count">{{article.comments|length}}
				commentaire(s)</span>
		</h2>
		<hr>
		<div class="comment-area mb-5">
			{{ form(form) }}
				{% for comment in article.comments %}
					<div class="card text-white bg-primary mb-3 p-3">
						<h3>{{ comment.user.fullName }}</h3>
						<p>{{ comment.content }}</p>
						<p>
							<small>{{ comment.createdAt|date('d M Y') }}</small>
						</p>
					</div>
				{% endfor %}
			</div>
		</div>
	{% endblock %}
