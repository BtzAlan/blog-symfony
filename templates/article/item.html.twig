<article class="mb-5 mt-5 pt-3">
	<div class="row">
		<div class="col-md-5">
			{% if article.featuredImage %}
				<a href="{{path('article.show', {'slug': article.slug})}}">
					<img src="/uploads/{{article.featuredImage.filename}}" alt="{{article.featuredImage.altText}}" loading="lazy" width="350">
				</a>
			{% endif %}
		</div>
		<div class="col-md-7">
			<h2>
				<a class='text-decoration-none' href="{{path('article.show', {'slug': article.slug})}}">{{ article.title }}</a>
			</h2>
			<p>
				{{ article.createdAt|date('d M Y') }}
			</p>
			{{ article.featuredText ?: article.content|striptags|slice(0, 130) ~ '...'}}
		</div>
	</div>
</article>
