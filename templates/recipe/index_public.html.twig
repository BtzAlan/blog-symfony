{% extends 'base.html.twig' %}

{% block title %}Recettes de la communauté
{% endblock %}

{% block body %}
	<div class="container mt-4">
		{% if not recipes.items is same as ([]) %}
			<h1>Recettes de la communauté</h1>

			<div class="d-flex flex-wrap justify-content-center mt-5">
				<div class="d-flex flex-wrap justify-content-center mt-5">
					{% for recipe in recipes %}
						<div class="p-4">
							<div class="card text-white bg-primary mb-3 mr-3" style="max-width: 20rem;">
								<div class="card-header">Recette n°{{recipe.id}}</div>
								<svg class="d-flex" width="100%" height="200" role="img" viewbox="0 0 318 180">
									<image href="{{recipe.imageFile}}" width="100%" height="100%"></image>
							</svg>
							<div class="card-body">
								<h4 class="card-title">
									<a class="text-light" href="{{path('recipe.show', {id: recipe.id})}}">{{recipe.name}}</a>
								</h4>
								<p class="card-text">{{recipe.description|slice(0,110)~'...'}}</p>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>

		{% else %}
			<h4>Il n'y a pas de recettes</h4>
		{% endif %}

		<div class="navigation d-flex justify-content-center mt-4">
			{{ knp_pagination_render(recipes) }}
		</div>

	</div>
{% endblock %}
